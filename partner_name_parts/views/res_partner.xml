					<group invisible="is_company == True" class="o_row oe_edit_only" colspan="3" col="3">
                        <field name="name_changed" invisible="1"/>
						<field name="name_required" invisible="1"/>
						<field name="first_name" placeholder="First Name" nolabel="1"
			                   required="is_company == False and name_required == True" readonly="name_required == False"/>
						<field name="middle_name" placeholder="Middle Name" nolabel="1"
			                   required="is_company == False and name_required == True" readonly="name_required == False"/>
						<field name="last_name" placeholder="Last Name" nolabel="1"
			                   required="is_company == False and name_required == True" readonly="name_required == False"/>
					</group>
				</h1>
			</h1>
        </field>
    </record>


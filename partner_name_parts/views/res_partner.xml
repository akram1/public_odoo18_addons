<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_simple_form" model="ir.ui.view">
        <field name="name">res.partner.simplified.formi.nherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_address_form"/>
        <field name="arch" type="xml">
			<h1 position="replace">
				<h1 class="oe_read_only">
					<field name="name" placeholder="Name" />
				</h1>
				<h1 class="oe_edit_only">
					<field name="type" invisible="1" />
					<field name="name" default_focus="1" placeholder="Name"
					       required="type == 'contact'" invisible="is_company == False"/>
					<group invisible="is_company == True" class="o_row oe_edit_only" colspan="3" col="3">
						<field name="is_company" invisible="1" />
						<field name="first_name" placeholder="First Name" nolabel="1" required="is_company == False"/>
						<field name="middle_name" placeholder="Middle Name" nolabel="1" />
						<field name="last_name" placeholder="Last Name" nolabel="1" required="is_company == False"/>
					</group>
				</h1>
			</h1>
        </field>
    </record>
    <record id="view_partner_address_form" model="ir.ui.view">
        <field name="name">res.partner.form.address.inherit</field>
        <field name="model">res.partner</field>

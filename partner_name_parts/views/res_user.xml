<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form" model="ir.ui.view">
        <field name="name">Add first, middle and last names</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <div class="oe_title" position="replace">
                <div class="oe_title">
                    <label for="name"/>
                    <h1><field name="name" placeholder="e.g. John Doe" invisible="1"/></h1>
                    <field name="name_required" invisible="1"/>
                    <group class="o_row" colspan="3" col="3">
                        <field name="name_required" invisible="1"/>
                        <field name="name_changed" invisible="1"/>
                        <field name="first_name" required="name_required == True" readonly="name_required ==  False"/>
                        <field name="middle_name" readonly="name_required ==  False"/>
                        <field name="last_name" required="name_required == True" readonly="name_required ==  False"/>
                    </group>
                    <field name="email" invisible="1"/>
                    <label for="login" string="Email Address"/>
                    <h2><field name="login" placeholder="e.g. email@yourcompany.com"
                               required="name_required == True" readonly="name_required ==  False"/></h2>
                    <group>
                        <field name="partner_id" readonly="1" required="0" groups="base.group_no_one"
                               invisible="id == False"/>
                        <field name="share" invisible="1"/>
                    </group>
                </div>
            </div>
        </field>
    </record>
    <record id="view_users_quick_form" model="ir.ui.view">
        <field name="name">Add first, middle and last names</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_simple_form"/>
        <field name="arch" type="xml">
            <div class="oe_title" position="replace">
                <div class="oe_title">
                    <label for="name"/>
                    <h1><field name="name" placeholder="e.g. John Doe" invisible="1"/></h1>
                    <field name="name_required" invisible="1"/>
                    <group class="o_row" colspan="3" col="3">
                        <field name="name_required" invisible="1"/>
                        <field name="name_changed" invisible="1"/>
                        <field name="first_name" required="name_required == True" readonly="name_required ==  False"/>
                        <field name="middle_name" readonly="name_required ==  False"/>
                        <field name="last_name" required="name_required == True" readonly="name_required ==  False"/>
                    </group>
                    <field name="email" invisible="1"/>
                    <label for="login" string="Email Address"/>
                    <h2><field name="login" placeholder="e.g. email@yourcompany.com"
                               required="name_required == True" readonly="name_required ==  False"/></h2>
                    <group>
                        <field name="partner_id" readonly="1" required="0" groups="base.group_no_one"
                               invisible="id == False"/>
                        <field name="share" invisible="1"/>
                    </group>
                </div>
            </div>
        </field>
    </record>
</odoo>

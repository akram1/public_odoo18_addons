<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="move_search_form_view" model="ir.ui.view">
        <field name="name">account.move.search.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="fld_tags"
                       options="{'color_field': 'color'}"/>
                <field name="search_tags"/>
                <field name="search_no_tags"/>
            </field>
        </field>
    </record>

    <record id="account_invoice_list_view" model="ir.ui.view">
        <field name="name">account.move.tags.list</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="status_in_payment" position="after">
                <field name="fld_tags"
                       options="{'color_field': 'color', 'no_create': True}"
                       context="{'search_default_group_by_category': 1}"
                       widget="many2many_tags"
                       placeholder="Tags..."/>
            </field>
        </field>
    </record>

    <record id="view_account_move_tag_form" model="ir.ui.view">
        <field name="name">account.move.tag.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <div name="journal_div" position="after">
                <field name="fld_tags"
                       options="{'color_field': 'color', 'no_create': True}"
                       context="{'search_default_group_by_category': 1,
                                 'default_model_name': 'account.move'}"
                       widget="many2many_tags"
                       placeholder="Tags..."/>
            </div>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_tags_view_action" model="ir.actions.act_window">
        <field name="name">Employee Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tag.tag</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'list', 'view_id': ref('tag.view_tag_list')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('tag.view_tag_form')})]"/>
        <field name="context" eval="{'default_model_id': ref('hr.model_hr_employee'), 
                                     'group_by': ['parent_cat', 'fld_cat']}"/>
        <field name="domain" eval="[('model_id','=',ref('hr.model_hr_employee'))]"/>
    </record>

    <menuitem id="menu_hr_employee_tags_id"
              name="Employee Tags"
              parent="tag.menu_tags_by_type"
              action="hr_employee_tags_view_action"/>
</odoo>
